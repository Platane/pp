{
  "name": "pitchperfect-app",
  "description": "Know what you don't",
  "version": "0.1.0",
  "dependencies": {
    "declarative-router": "0.1.1",
    "emotion": "9.1.2",
    "preact": "8.2.7",
    "preact-compat": "3.18.0",
    "preact-emotion": "9.1.2",
    "preact-redux": "2.0.3",
    "preact-router": "2.6.0",
    "prop-types": "15.6.1",
    "raven-js": "3.24.2",
    "react-propstransition": "2.0.6",
    "redux": "4.0.0",
    "unfetch": "3.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-jest": "23.0.0-alpha.0",
    "babel-loader": "7.1.4",
    "babel-plugin-emotion": "9.1.2",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-inline-environment-variables": "0.4.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-minify": "0.4.0",
    "file-loader": "1.1.11",
    "flow-bin": "0.70.0",
    "jest": "22.4.3",
    "prettier": "1.12.1",
    "tap-spec": "4.1.1",
    "tape": "4.9.0",
    "webpack": "4.6.0",
    "webpack-assets-manifest": "3.0.1",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3"
  },
  "jest": {
    "testMatch": ["**/__tests__/**/*.(spec|test).js"]
  },
  "scripts": {
    "start":
      "webpack-dev-server --mode development --config ./script/webpack.config.js",
    "test:browser":
      "NODE_ENV=test webpack-dev-server --port 3001 --mode development --config ./script/webpack.config.test.js",
    "build:test": "rm -rf lib && NODE_ENV=test babel --out-dir ./lib ./src",
    "test:dev":
      "NODE_ENV=test node -e \"require('babel-register');global.fetch=require('node-fetch');require('./src/__tests__/index.js')\" | tap-spec",
    "build":
      "rm -rf dist && mkdir dist && NODE_ENV=production babel --out-file ./dist/sw.js ./src/service/serviceWorker/sw.js && NODE_ENV=production webpack --config ./script/webpack.config.js --mode development --json > dist/stats.json && node ./script/rewriteFileName.js && node ./script/buildManifest.js"
  }
}
